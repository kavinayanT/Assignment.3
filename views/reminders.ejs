<!DOCTYPE html>
<html lang="en">
<head>
  <title>Your Reminders</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('partials/header'); %>
  <main>
    <h1>Your Reminders</h1>
    <a href="/reminders/add">Add New Reminder</a>
    <h2>Upcoming Reminders</h2>
    <ul>
      <% reminders.filter(r => !r.completed).forEach(reminder => { %>
        <li>
          <%= reminder.title %> - <%= reminder.date.toLocaleString() %>
          <form method="POST" action="/reminders/complete/<%= reminder._id %>" style="display:inline;">
            <button type="submit">Complete</button>
          </form>
        </li>
      <% }); %>
    </ul>
    <h2>Completed Reminders</h2>
    <ul>
      <% reminders.filter(r => r.completed).forEach(reminder => { %>
        <li><%= reminder.title %> - Completed</li>
      <% }); %>
    </ul>
  </main>
  <%- include('partials/footer'); %>
</body>
</html>
