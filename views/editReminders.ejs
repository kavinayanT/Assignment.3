<!DOCTYPE html>
<html lang="en">
<head>
  <title>Edit Reminder</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('partials/header'); %>
  <main>
    <h1>Edit Reminder</h1>
    <form method="POST" action="/reminders/edit/<%= reminder._id %>">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" value="<%= reminder.title %>" required>
      <label for="description">Description:</label>
      <textarea id="description" name="description" required><%= reminder.description %></textarea>
      <label for="date">Date:</label>
      <input type="datetime-local" id="date" name="date" value="<%= reminder.date.toISOString().slice(0,16) %>" required>
      <button type="submit">Update Reminder</button>
    </form>
  </main>
  <%- include('partials/footer'); %>
</body>
</html>
